{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VGM to MIDI Converter",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vgm_ws_to_mid/vgm_ws_to_mid.exe",
            "args": [
                "vgm_ws_to_mid/05_Main_Theme.vgm",
                "vgm_ws_to_mid/output.mid"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build vgm_ws_to_mid"
        },
        {
            "name": "Debug MIDI Validator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vgm_ws_to_mid/validator.exe",
            "args": [
                "vgm_ws_to_mid/output.mid"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build validator"
        }
    ]
}
